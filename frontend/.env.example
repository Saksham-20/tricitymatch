# =============================================================================
# TricityMatch Frontend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# Vite only exposes variables prefixed with VITE_
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API URL (include /api prefix if needed)
VITE_API_URL=http://localhost:5000/api

# WebSocket URL (for real-time features)
VITE_WS_URL=http://localhost:5000

# -----------------------------------------------------------------------------
# Payment Gateway (Razorpay)
# -----------------------------------------------------------------------------
# Get from https://dashboard.razorpay.com/app/keys
# Use test key for development, live key for production
VITE_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Cloudinary (Image Upload - if using direct upload)
# -----------------------------------------------------------------------------
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset
VITE_CLOUDINARY_FOLDER=tricitymatch

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------
# Enable analytics in production
VITE_ENABLE_ANALYTICS=false

# Error reporting endpoint
VITE_ERROR_REPORTING_URL=

# Google Analytics ID (if using)
VITE_GA_TRACKING_ID=

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# Enable source maps in production (for debugging)
VITE_ENABLE_SOURCE_MAPS=false
